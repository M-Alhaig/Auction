		{
			"name": "Items - Security Tests",
			"item": [
				{
					"name": "Try to Update Someone Else's Item (Should Fail)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Auth-Id",
								"value": "{{otherSellerId}}",
								"description": "Different seller ID - should get 403 Forbidden"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Trying to steal this item!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items", "{{itemId}}"]
						}
					},
					"response": []
				},
				{
					"name": "Try to Delete Someone Else's Item (Should Fail)",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-Auth-Id",
								"value": "{{otherSellerId}}",
								"description": "Different seller ID - should get 403 Forbidden"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items", "{{itemId}}"]
						}
					},
					"response": []
				}
			]
		},
