{
	"info": {
		"_postman_id": "auction-item-service",
		"name": "Auction Platform - Item Service",
		"description": "Complete API testing collection for Item Service\n\n**Setup:**\n1. Start Docker: `docker-compose up -d`\n2. Start Item Service: `mvn spring-boot:run`\n3. Set environment variables (see Variables tab)\n\n**Test Order:**\n1. Categories → Get All Categories\n2. Items → Create Item\n3. Items → Get Item by ID\n4. Items → Update Item\n5. Items → Get All Items (pagination)\n6. Items → Delete Item",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Categories",
			"item": [
				{
					"name": "Get All Categories",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/categories",
							"host": ["{{baseUrl}}"],
							"path": ["api", "categories"]
						}
					},
					"response": []
				},
				{
					"name": "Get Category by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/categories/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "categories", "1"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Items - CRUD",
			"item": [
				{
					"name": "Create Item",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save the created item ID for subsequent requests",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"itemId\", response.id);",
									"    pm.environment.set(\"createdItemId\", response.id);",
									"    console.log(\"Created item ID:\", response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Auth-Id",
								"value": "{{sellerId}}",
								"description": "Temporary auth header (will be JWT in production)"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Vintage Gibson Les Paul Guitar\",\n  \"description\": \"Beautiful 1959 Gibson Les Paul in excellent condition. Sunburst finish, original hardware. A true collector's piece.\",\n  \"startingPrice\": 5000.00,\n  \"imageUrl\": \"https://example.com/images/gibson-les-paul.jpg\",\n  \"startTime\": \"2025-10-12T10:00:00\",\n  \"endTime\": \"2025-10-19T10:00:00\",\n  \"categoryIds\": [1, 5]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/items",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items"]
						}
					},
					"response": []
				},
				{
					"name": "Get Item by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items", "{{itemId}}"]
						}
					},
					"response": []
				},
				{
					"name": "Update Item (PATCH)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Auth-Id",
								"value": "{{sellerId}}",
								"description": "Must match the seller who created the item"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Vintage Gibson Les Paul Guitar - UPDATED\",\n  \"description\": \"Updated description with more details about the finish and provenance.\",\n  \"startingPrice\": 5500.00\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items", "{{itemId}}"]
						}
					},
					"response": []
				},
				{
					"name": "Delete Item",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-Auth-Id",
								"value": "{{sellerId}}",
								"description": "Must match the seller who created the item"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "items", "{{itemId}}"]
						}
					},
					"response": []
				}
			]
		},
