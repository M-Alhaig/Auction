# EditorConfig - Unified code style across IDEs (IntelliJ, VS Code, Eclipse, etc.)
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_style = tab
indent_size = 4

# XML, YAML, Properties, JSON
[*.{xml,yaml,yml,properties,json}]
indent_style = space
indent_size = 2

# SQL migrations
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
